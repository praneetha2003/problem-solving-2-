#include <stdio.h>

int main()
{
    int AP,DA,DP,FP;
    printf("enter the actual price of the product\n");
    scanf("%d",&AP);
    printf("enter the discount percentage of the product\n");
    scanf("%d",&DP);
    DA=(AP*DP);
    FP=(AP-DA);
    printf("the discount amount:%d",DA);
    printf("\nthe final price:%d",FP);
    return 0;
}
